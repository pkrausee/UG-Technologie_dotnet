@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

    <ul class="navigation-login">

        @if (User.IsInRole("Administrator") && SignInManager.IsSignedIn(User))
        {
            <li class="navigation-profile">
                <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
            </li>
            <li class="navigation-log">
                <a class="" asp-area="Identity" asp-page="/Account/Register">Register</a>
            </li>
            <li class="">
                <form class="navigation-log-logout" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                    <button type="submit" class="">Logout</button>
                </form>
            </li>
        }
        else if (SignInManager.IsSignedIn(User))
        {
            <li class="navigation-profile">
                <a class="" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity.Name!</a>
            </li>
            <li class="navigation-log">
                    <form class="" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new {area = ""})">
                        <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                    </form>
            </li>
        }
        else if(!SignInManager.IsSignedIn(User))
        {
            <li class="navigation-log">
                <a class="" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
